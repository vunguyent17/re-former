  <main>
  <% flash.each do |key, value| %>
    <div id="error_explanation">
      <div>
        <%= value unless value.blank? %>
      </div>
    </div>
  <% end %>
    <h1>Edit</h1>
    
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>
        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
   

    <%= form_with(url: user_path, method: "put", model: @user) do |form| %>
        <%= form.label :email %>:
        <%= form.email_field :email, placeholder: "example@example.com"%><br/>
        <%= form.label :username %>:
        <%= form.text_field :username, placeholder: "johndoe123" %><br/>
        <%= form.label :password %>:
   			<%= form.password_field :password, placeholder: "Your Password"%><br/>
   			<%= form.submit "Update" %>
  	<% end %>
  </main>